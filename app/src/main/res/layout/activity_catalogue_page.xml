<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CataloguePage">


    <Button
        android:id="@+id/OpenFoodReview"
        android:layout_width="333dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/outlinebutton"
        android:elevation="6px"
        android:text="Rate this dish"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="367dp"
        android:layout_height="385dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/rectangle3"
        android:elevation="5px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="406dp"
        android:layout_height="0dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CATfoodName3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="0dp"
                    android:elevation="10dp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="0dp"
                    android:elevation="10dp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image3"
                    android:layout_width="180dp"
                    android:layout_height="176dp"
                    android:layout_margin="0dp"
                    android:elevation="10dp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="310dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="@string/FoodName"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="51dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="@string/FoodCalories"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="47dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="@string/FoodLocation"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="Rating:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="47dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="@string/FoodPrice"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/CATfoodName"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="35dp"
        android:elevation="6px"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CATfoodName3"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="@font/alata"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CATfoodPrice"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:elevation="6px"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CATfoodName" />

    <TextView
        android:id="@+id/CATfoodCalories"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="19dp"
        android:elevation="6px"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CATfoodPrice" />

    <TextView
        android:id="@+id/storeLocation"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:elevation="6px"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CATfoodCalories" />

</androidx.constraintlayout.widget.ConstraintLayout>