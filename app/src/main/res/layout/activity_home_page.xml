                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/alata"
                    android:text="top1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:translationZ="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/top3list"
                    app:layout_constraintStart_toStartOf="@+id/top3list"
                    app:layout_constraintTop_toTopOf="@+id/top3list" />

                <androidx.cardview.widget.CardView
