                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="298dp"
                    android:fontFamily="@font/alata"
                    android:text="Wishlist"
                    android:textStyle="bold"
                    android:translationZ="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top3list" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="130dp"
                    android:layout_height="107dp"
                    android:layout_marginEnd="200dp"
                    android:translationZ="16dp"
                    app:cardCornerRadius="8dp"

                    app:layout_constraintBottom_toBottomOf="@+id/crowdbutton"
                    app:layout_constraintEnd_toEndOf="@+id/crowdbutton"
                    app:layout_constraintStart_toStartOf="@+id/crowdbutton"
                    app:layout_constraintTop_toTopOf="@+id/crowdbutton">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="132dp"
                        android:layout_height="113dp"

