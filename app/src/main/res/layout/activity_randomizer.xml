<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RandomizerPage">

    <View
        android:id="@+id/view4"
        android:layout_width="374dp"
        android:layout_height="347dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/rectangle3"
        android:elevation="6px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomid" />

    <TextView
        android:id="@+id/dontchange"
        android:layout_width="311dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="You should eat at..."
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <TextView
        android:id="@+id/randomchange"
        android:layout_width="313dp"
        android:layout_height="102dp"
        android:layout_marginTop="48dp"
        android:elevation="6px"
        android:fontFamily="@font/alata"
        android:text="Press Generate to start the Randomizer"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/dontchange" />

    <Button
        android:id="@+id/generate"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/outlinebutton"
        android:elevation="6px"
        android:text="Generate"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/randomid"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="76dp"
        android:fontFamily="@font/alata"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Randomizer"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>